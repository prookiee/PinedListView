<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210px"
    android:background="@color/white"
    android:orientation="vertical">

    <!--左边进度条-->
    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="140px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="1px"
            android:layout_height="135px"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/view_point"
            android:background="@color/progress_line" />

        <View
            android:layout_width="20px"
            android:layout_height="20px"
            android:background="@color/progress_point" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/view_point"
            android:background="@color/progress_line" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_open_type"
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_marginLeft="65px"
        android:layout_marginTop="95px"
        android:layout_toRightOf="@+id/ll_progress"
        android:src="@color/text_color_gray" />


    <TextView
        android:id="@+id/tv_open_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="95px"
        android:layout_toRightOf="@+id/iv_open_type"
        android:text="单次密码"
        android:textColor="@color/text_color_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_open_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_open_type"
        android:layout_marginLeft="45px"
        android:layout_marginTop="25px"
        android:layout_toRightOf="@+id/iv_open_type"
        android:text="10:35:09"
        android:textColor="@color/text_color_black"
        android:textSize="12sp" />


</RelativeLayout>